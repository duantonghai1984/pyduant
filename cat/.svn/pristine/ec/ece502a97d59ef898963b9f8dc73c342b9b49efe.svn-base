{% extends "mabase.html" %} {% block content %}

<div class="panel panel-default col-md-4 col-md-offset-3">
  <div class="panel-body">
      <form class="form-signin" role="form" action="/">
        <h3 class="form-signin-heading">请登录</h3>
        <input type="email" class="form-control" placeholder="账号/邮箱/手机" required autofocus>
        <input type="password" class="form-control" placeholder="密码" required>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me">记住我
          </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">登录</button>
        <div class="checkbox no-padding">
                    <a href="/signup" class="a text-left">立即注册</a>
                    <a href="/resetBySms" class="a pull-right">忘记密码？</a>
         </div>
      </form>
     </div>
</div>
{% endblock %}
